{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile crtcdriver.cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall", "-Wextra", "-Wpedantic", "-Wshadow", "-Wformat=2", "-Wcast-align", "-Wconversion", "-Wsign-conversion", "-Wnull-dereference",
                "--std=c++20", "-g3", "-O0",
                "-I${workspaceFolder}/lib",
                "-c", "${workspaceFolder}/crtcdriver.cpp",
                "-o", "${workspaceFolder}/build/Debug/crtcdriver.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}